{
  "name": "builder-factory",
  "version": "2.1.0",
  "description": "Factory for creating basic object types during testing.",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --optimize-minimize",
    "test": "npm run build && jest",
    "shipit": "npm run test && npm version patch && npm publish"
  },
  "author": "Kevin Wilson <kevin@partcoffee.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kwilson/builder-factory"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  }
}
